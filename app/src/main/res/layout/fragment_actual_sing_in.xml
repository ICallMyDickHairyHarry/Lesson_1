<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".ActualSingInFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/inter_bold"
        android:letterSpacing="-0.02"
        android:text="Кек"
        android:textColor="@color/light_green"
        android:textSize="32dp"
        android:textStyle="normal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/mood_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"

        android:src="@drawable/picture_for_mood"
        app:layout_constraintBottom_toTopOf="@+id/email_layout"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/email_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"


        app:layout_constraintBottom_toTopOf="@+id/Pass_layout"
        tools:layout_editor_absoluteX="16dp">

        <EditText
            android:id="@+id/email_form"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="6dp"
            android:backgroundTint="@color/white"
            android:hint="@string/eml"
            android:orientation="vertical"


            android:text="simpleEmail@pochta.kek" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/Pass_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginBottom="48dp"
        app:layout_constraintBottom_toTopOf="@+id/login"
        tools:layout_editor_absoluteX="16dp">

        <EditText
            android:id="@+id/pass_form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:inputType="textPassword"
            android:hint="@string/pass" />

    </com.google.android.material.textfield.TextInputLayout>


    <Button
        android:id="@+id/login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="28dp"
        android:backgroundTint="@color/light_green"
        android:text="Войти"

        android:textAllCaps="false"
        android:textColor="@color/black"
        app:cornerRadius="6dp"
        app:layout_constraintBottom_toTopOf="@+id/sing_up_hint"
        tools:layout_editor_absoluteX="16dp" />

    <TextView
        android:id="@+id/sing_up_hint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="84dp"
        android:alpha="0.87"
        android:gravity="center"
        android:text="Нет аккаунта? Зарегайся!"
        android:textColor="@color/black"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="16dp" />


</androidx.constraintlayout.widget.ConstraintLayout>